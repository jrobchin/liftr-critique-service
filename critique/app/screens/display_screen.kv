#: include critique/app/widgets/exercise_widget.kv

#:import settings critique.settings
#:import os os

<DisplayScreen>:
    FloatLayout:
        Label:
            id: error_label
            text: "Error reading from webcam..."
            opacity: 0

    BoxLayout:
        orientation:'vertical'

        # Top Bar
        BoxLayout:
            orientation: 'horizontal'
            height: 40
            size_hint: 1.0, None

            Button:
                text: 'back'
                size_hint: None, None
                size: 75, 40
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'
                    root.ids.display.stop()

            Label:
                id: workout_label
                text: ''
                size_hint: None, None
                size: 300, 40
                text_size: self.size
                padding_x: 20
                valign: 'middle'

        # Main Display
        ExerciseWidget:
            id: display
            camera: settings.DEFAULT_CAMERA

        # Debug Bar
        BoxLayout:
            orientation: 'horizontal'
            height: 40
            size_hint: 1.0, None

            Label:
                text: "Debug:"
                size: self.texture_size[0] + 20, 40
                size_hint: None, None

            Button:
                text: 'RESET'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.reset()

            Button:
                text: '0'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.camera = '0'

            Button:
                text: '1'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.camera = '1'

            Button:
                text: 'ohsp'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.camera = 'ohsp.mp4'

            Button:
                text: 'bwswt'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.camera = 'bwsqt.mp4'

            Button:
                text: 'shoulder_press'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._select_exercise(self.text)

            Button:
                text: 'bicep_curl'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._select_exercise(self.text)

            Button:
                text: 'start_exercise'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._start_exercise(10)

            Button:
                text: 'test_critique'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._test_critique()

            Label:
                text: "Started:"
                size: self.texture_size[0] + 20, 40
                size_hint: None, None

            Label:
                id: started_value_label
                text: "False"
                size: 100, 40
                size_hint: None, None

            Label:
                text: "State:"
                size: self.texture_size[0] + 20, 40
                size_hint: None, None

            Label:
                id: state_value_label
                text: ""
                size: 100, 40
                size_hint: None, None

            Label:
                text: "Reps:"
                size: self.texture_size[0] + 20, 40
                size_hint: None, None

            Label:
                id: rep_value_label
                text: ""
                size: 100, 40
                size_hint: None, None

            Label:
                text: "Critiques:"
                size: self.texture_size[0] + 20, 40
                size_hint: None, None

            Label:
                id: critique_count_value_label
                text: ""
                size: 100, 40
                size_hint: None, None

    # Overlay
    FloatLayout:

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            FloatLayout:
                id: workout_select_info_box
                size_hint: 0.8, 0.8
                canvas:
                    Color:
                        rgb: 0, 0, 0
                        a: 0.7
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

            Label:
                id: workout_select_info_label
                font_size: 32
                text_size: (workout_select_info_box.size[0], None)
                padding_x: 100
                halign: 'center'
                text: "Please use your mobile device to select an exercise."

            FloatLayout:
                id: count_down_box
                opacity: 0
                size_hint: None, None
                size: 200, 225
                canvas:
                    Color:
                        rgb: 1, 1, 1
                        a: 0.7
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos

            Label:
                id: count_down_label
                opacity: 0
                font_size: 64
                text_size: (count_down_box.size[0], None)
                color: 208/255, 0, 0, 1
                halign: 'center'
                text: "3"
