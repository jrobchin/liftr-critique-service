#:import settings critique.settings

<MenuScreen>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'critique/app/assets/menu-imgs/menu-2.jpg'

    FloatLayout:
        opacity: int(settings.DEBUG_BUTTONS)

        Button:
            text: 'Refresh Session'
            size_hint: None, None
            size: 150, 40
            border: 0, 0, 0, 0
            color: 1, 1, 1, 1
            background_color: 1, 1, 1, 0.7
            on_press:
                root.connect()

        Button:
            text: 'Start'
            size_hint: None, None
            x: 150
            size: 150, 40
            border: 0, 0, 0, 0
            color: 1, 1, 1, 1
            background_color: 1, 1, 1, 0.7
            on_press:
                root._transition_to_display()

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            FloatLayout:

                SessionKeyLabel:
                    id: session_key_label
                    size_hint: 1.0, 1.0
                    color: 1, 1, 1, 1
                    font_size: 600

                Label:
                    text: "Enter the code above into your device to begin."
                    size_hint: 1.0, None
                    color: 1, 1, 1, 1
                    font_size: 32
                    y: 200
                    font_name: 'critique/app/assets/fonts/HelveticaNeue Light.ttf'

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            Label:
                text: "[color=#D00000]LIFTR[/color] [color=#FFFFFF]train[/color]"
                markup: True
                size_hint: None, None
                size: self.texture_size
                font_size: 81
                padding_x: 10
                font_name: 'critique/app/assets/fonts/HelveticaNeueHv.ttf'

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'

            StackLayout:
                orientation: 'rl-tb'
                spacing: 20, 0

                Label:
                    id: time_label
                    text: "11:05AM"
                    size_hint: None, None
                    size: self.texture_size
                    color: 1, 1, 1, 1
                    font_size: 36
                    font_name: 'critique/app/assets/fonts/HelveticaNeue Light.ttf'

                Label:
                    id: weather_label
                    markdown: True
                    size_hint: None, None
                    size: self.texture_size
                    color: 1, 1, 1, 1
                    font_size: 36
                    font_name: 'critique/app/assets/fonts/HelveticaNeue Light.ttf'