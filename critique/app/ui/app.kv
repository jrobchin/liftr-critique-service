#:kivy 1.11
<Widget>:
    # canvas:
    #     Rectangle:
    #         size: 2, 2
    #         pos: self.pos


<MenuScreen>:
    FloatLayout:
        Button:
            text: 'Refresh Session'
            size_hint: None, None
            size: 150, 40
            border: 0, 0, 0, 0
            color: 1, 1, 1, 1
            background_color: 1, 1, 1, 0.2
            on_press:
                root.connect()

        RelativeLayout:
            id: panel
            size_hint_x: 0.6
            size_hint_y: 0.5
            pos_hint: { 'center_x': 0.5, 'center_y': 0.5 }

            canvas.before:
                Color:
                    rgb: 1, 1, 1
                    a: 0.25
                RoundedRectangle:
                    size: self.size

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'

                Label:
                    text: "[b]LIFTR[/b] [color=#000000]train[/color]"
                    markup: True
                    height: 150
                    size_hint: 1.0, None
                    color: 208/255, 0, 0, 1
                    font_size: 81
                    pos_hint: { 'center_x': 0.5 }

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'

                SessionKeyLabel:
                    id: session_key_label
                    markup: True
                    height: 150
                    size_hint: 1.0, None
                    color: 0, 0, 0, 1
                    font_size: 32
                    pos_hint: { 'center_x': 0.5 }

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    width: 310
                    size_hint: None, None
                    padding: 0, 30

                    Button:
                        text: 'Start'
                        size_hint: None, None
                        size: 150, 40
                        border: 0, 0, 0, 0
                        color: 0, 0, 0, 1
                        background_color: 0, 0, 0, 0
                        canvas.before:
                            Color: 
                                rgb: 208/255, 0, 0
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        on_press:
                            root._transition_to_display()

                    Button:
                        text: 'About'
                        size_hint: None, None
                        size: 150, 40
                        border: 0, 0, 0, 0
                        color: 0, 0, 0, 1
                        background_color: 1, 1, 1, 0
                        canvas.before:
                            Color: 
                                rgb: 208/255, 0, 0
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                        on_press:
                            root.manager.transition.direction = 'up'
                            root.manager.current = 'about'

<AboutScreen>:
    FloatLayout:
        RelativeLayout:
            id: panel
            size_hint_x: 0.6
            size_hint_y: 0.5
            pos_hint: { 'center_x': 0.5, 'center_y': 0.5 }

            canvas.before:
                Color: 
                    rgb: 1, 1, 1
                    a: 0.25
                RoundedRectangle:
                    size: self.size
        
            BoxLayout:
                orientation: 'vertical'
                
                Label:
                    text: "Liftr"
                    size_hint_y: None
                    height: 100
                    text_size: self.size[0] - 20, self.size[1]
                    color: 208/255, 0, 0, 1
                    font_size: 81
                
                Label:
                    size_hint_y: None
                    text_size: self.size[0] - 30, self.size[1]
                    text: "Liftr is a virtual personal fitness trainer that uses AI to estimator your pose and give you real-time critiques."
                    font_size: 24

                Widget:

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 60
                    
                    Widget:
                        size_hint: None, None
                        size: 20, 40

                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'center'

                        Button:
                            text: "Back"
                            size_hint: None, None
                            size: 75, 40
                            on_press:
                                root.manager.transition.direction = 'down'
                                root.manager.current = 'menu'

<DisplayScreen>:
    FloatLayout:
        Label:
            id: error_label
            text: "Error reading from webcam..."
            opacity: 0

    BoxLayout:
        orientation:'vertical'

        BoxLayout:
            orientation: 'horizontal'
            height: 40
            size_hint: 1.0, None

            Button:
                text: 'back'
                size_hint: None, None
                size: 75, 40
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'
                    root.ids.display.stop()

            Label:
                id: workout_label
                text: ''
                size_hint: None, None
                size: 300, 40
                text_size: self.size
                padding_x: 20
                valign: 'middle'

        DisplayWidget:
            id: display
            camera: 0

        BoxLayout:
            orientation: 'horizontal'
            height: 40
            size_hint: 1.0, None

            Label:
                text: "Debug:"
                size: self.texture_size[0] + 20, 40
                size_hint: None, None

            Button:
                text: '0'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.camera = 0
            
            Button:
                text: '1'
                size_hint: None, None
                size: 75, 40
                on_press:
                    display.camera = 1
            
            Button:
                text: 'shoulder_press'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._select_exercise(self.text)
            
            Button:
                text: 'bicep_curl'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._select_exercise(self.text)
            
            Button:
                text: 'start_exercise'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._start_exercise()
            
            Button:
                text: 'test_critique'
                size_hint: None, None
                size: 150, 40
                on_press:
                    display._send_critique()
            
    
    FloatLayout:

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            FloatLayout:
                id: workout_select_info_box
                size_hint: 0.8, 0.8
                canvas:
                    Color:
                        rgb: 0, 0, 0
                        a: 0.7
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
            
            Label:
                id: workout_select_info_label
                font_size: 32
                text_size: (workout_select_info_box.size[0], None)
                padding_x: 100
                halign: 'center'
                text: "Please use your mobile device to select an exercise."

            FloatLayout:
                id: count_down_box
                opacity: 0
                size_hint: None, None
                size: 200, 225
                canvas:
                    Color:
                        rgb: 1, 1, 1
                        a: 0.7
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
            
            Label:
                id: count_down_label
                opacity: 0
                font_size: 64
                text_size: (count_down_box.size[0], None)
                color: 208/255, 0, 0, 1
                halign: 'center'
                text: "3"
